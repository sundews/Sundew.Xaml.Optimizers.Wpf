<UserControl x:Class="Sundew.Xaml.Optimizations.TestData.Gallery.ReflectionGalleryControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:gallery="clr-namespace:Sundew.Xaml.Optimizations.TestData.Gallery"
      xmlns:sx="http://sundew.dev/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance d:Type=gallery:GalleryViewModel}">
    <Grid>
        <ItemsControl ItemsSource="{Binding Photos}" VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.CanContentScroll="True">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Brown" BorderThickness="1">
                        <Grid>
                            <Image Source="{Binding Source, Mode=OneWay}" Stretch="UniformToFill" Width="80" Height="80" sx:Bindings.Phase="5"/>
                            <Grid Grid.Column="1">
                                <TextBlock Grid.Row="0" Text="{Binding Title, Mode=OneTime}" TextWrapping="NoWrap" />
                                <TextBlock Grid.Row="1" Text="{Binding OriginalResolution, Mode=OneTime}" TextWrapping="NoWrap" sx:Bindings.Phase="1"/>
                                <TextBlock Grid.Row="2" Text="{Binding LargeUrl, Mode=OneTime}" TextWrapping="NoWrap" sx:Bindings.Phase="2" FontSize="10"/>
                                <TextBlock Grid.Row="3" TextWrapping="NoWrap" FontSize="10">
                                    <Run Text="{Binding DateTaken, Mode=OneTime}" sx:Bindings.Phase="3"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding License, Mode=OneTime}" sx:Bindings.Phase="3"/>
                                </TextBlock>
                                <TextBlock Grid.Row="4" Text="{Binding Description, Mode=OneTime}" sx:Bindings.Phase="4" TextWrapping="NoWrap" FontSize="10"/>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                            </Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}">
                        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>
        </ItemsControl>
    </Grid>
</UserControl>
