<UserControl x:Class="Sundew.Xaml.Optimizations.TestData.Gallery.CompiledGalleryControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:gallery="clr-namespace:Sundew.Xaml.Optimizations.TestData.Gallery"
      xmlns:sx="http://sundew.dev/xaml"
      xmlns:bindings="clr-namespace:Sundew.Xaml.Optimizations.Bindings;assembly=Sundew.Xaml.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance d:Type=gallery:GalleryViewModel}"
      bindings:BindingConnection.BindingConnector="{gallery:CompiledGalleryControlBindingConnector}">
    <Grid>
        <ItemsControl x:Name="ItemsControl1" VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.CanContentScroll="True">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="gallery:PhotoViewModel">
                    <Border BorderBrush="Brown" BorderThickness="1" bindings:BindingConnection.BindingConnector="{gallery:PhotoViewModelBindingConnector}">
                        <Grid>
                            <Image x:Name="Image1"  Source="{Binding Source, Mode=OneWay}" Stretch="UniformToFill" Width="80" Height="80"/>
                            <Grid Grid.Column="1">
                                <TextBlock Grid.Row="0" x:Name="TextBlock2" TextWrapping="NoWrap" />
                                <TextBlock Grid.Row="1" x:Name="TextBlock3" TextWrapping="NoWrap"/>
                                <TextBlock Grid.Row="2" x:Name="TextBlock4" TextWrapping="NoWrap" FontSize="10"/>
                                <TextBlock Grid.Row="3" TextWrapping="NoWrap" FontSize="10">
                                    <Run x:Name="Run5" />
                                    <Run Text=" "/>
                                    <Run x:Name="Run6"/>
                                </TextBlock>
                                <TextBlock Grid.Row="4" x:Name="TextBlock7" TextWrapping="NoWrap" FontSize="10"/>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                            </Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}">
                        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>
        </ItemsControl>
    </Grid>
</UserControl>
